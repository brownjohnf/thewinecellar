<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Bio</th>
    <th>Phone</th>
    <th>Encrypted password</th>
    <th>Salt</th>
    <th>Admin</th>
    <th>Moderator</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.bio %></td>
    <td><%= user.phone %></td>
    <td><%= user.encrypted_password %></td>
    <td><%= user.salt %></td>
    <td><%= user.admin %></td>
    <td><%= user.moderator %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

