<h1>Listing bottles</h1>

<table>
  <tr>
    <th>Cellar</th>
    <th>Offering</th>
    <th>Year</th>
    <th>Number</th>
    <th>Comment</th>
    <th>Format</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bottles.each do |bottle| %>
  <tr>
    <td><%= bottle.cellar_id %></td>
    <td><%= bottle.offering_id %></td>
    <td><%= bottle.year %></td>
    <td><%= bottle.number %></td>
    <td><%= bottle.comment %></td>
    <td><%= bottle.format_id %></td>
    <td><%= link_to 'Show', bottle %></td>
    <td><%= link_to 'Edit', edit_bottle_path(bottle) %></td>
    <td><%= link_to 'Destroy', bottle, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

